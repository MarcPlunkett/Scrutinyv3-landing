  style.
    /* Shutdown Notice (namespaced) */
    #sdn-overlay[hidden] { display: none !important; }
    #sdn-overlay {
      position: fixed; inset: 0; z-index: 1055;
      display: grid; place-items: center;
      background: rgba(22, 28, 45, 0.55);
      backdrop-filter: blur(2px);
    }
    .sdn-modal {
      width: min(780px, 92vw);
      max-height: 85vh;
      overflow: auto;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 1rem 3rem rgba(0,0,0,.2);
    }
    .sdn-header {
      display: flex; align-items: center; justify-content: space-between;
      padding: 1rem 1.25rem; border-bottom: 1px solid rgba(0,0,0,.05);
    }
    .sdn-title { margin: 0; font-size: 1.25rem; font-weight: 600; }
    .sdn-body { padding: 1.25rem; }
    .sdn-actions {
      display: flex; gap: .5rem; justify-content: flex-end; padding: 1rem 1.25rem;
      border-top: 1px solid rgba(0,0,0,.05);
    }
    .sdn-close {
      appearance: none; border: 0; background: transparent; font-size: 1.5rem; line-height: 1;
      padding: .25rem; cursor: pointer;
    }
    .sdn-btn {
      appearance: none; border: 0; cursor: pointer;
      border-radius: .5rem; padding: .6rem 1rem; font-weight: 600;
    }
    .sdn-btn-primary { background: #0061f2; color: #fff; }
    .sdn-btn-outline { background: #fff; color: #0061f2; border: 2px solid #0061f2; }
    body.sdn-open { overflow: hidden; }
  // Optional: respect your theme’s light card bg if it differs



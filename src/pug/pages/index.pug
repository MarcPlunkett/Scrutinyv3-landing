    link(rel='stylesheet', href='https://unpkg.com/aos@next/dist/aos.css')

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-primary',
        navbarStyle: 'navbar-dark',
        navbarBrandColor: 'text-white',
        navbarBtnColor: 'btn-white',
        navbarContainer: 'container',
        navbarPosition: 'fixed-top'
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-primary',
        pageHeaderStyle: 'page-header-dark',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .page-header-content.mb-n5
            .container
                .row.justify-content-center.align-items-center
                    .col-lg-6(data-aos='fade-right')
                        h1.page-header-title Groundbreaking research from your smartphone
                        p.page-header-text.mb-5 Finding research for your projects has never been easier. Get started now!
                        .mb-5.mb-lg-0
                            a.mr-3(href='https://apps.apple.com/us/app/scrutiny/id1449138024' )
                                img(src='assets/img/app-badges/app-store-badge.svg', style="height: 3rem;")
                            a(data-toggle="tooltip" data-placement="top" title="Coming soon")
                                img(src='assets/img/app-badges/google-play-badge-grey.svg', style="height: 3rem;")
                            .page-header-text.mt-2.text-xs.font-italic
                                | * Requires Apple iOS 10.0+
                    .col-lg-6.z-1(data-aos='fade-left')
                        .device-wrapper.mx-auto.mb-n15
                            .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                                .screen
                                    img(src='assets/img/app-screenshots/search-screen.png').img-fluid.z-1

    //- * * * * * * * * * * * * *
    //- * * Features Section  * *
    //- * * * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-white',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: ''
    })

        .container
            .row.text-center
                .col-lg-4.mb-5.mb-lg-0
                    .icon-stack.icon-stack-xl.bg-primary.text-white.mb-4
                        i(data-feather='search')
                    h3 Built for researchers
                    p.mb-0
                        | By analyzing common research habits our solution makes performing your next literature review, starting your next project, or writing your next paper fast and easy! 
                .col-lg-4.mb-5.mb-lg-0
                    .icon-stack.icon-stack-xl.bg-primary.text-white.mb-4
                        i(data-feather='smartphone')
                    h3 Modern design
                    p.mb-0
                        | Current research tools are antiquated! built from the ground up with the 21st century in mind. Mobile first with compatibility between devices and reference managers
                .col-lg-4
                    .icon-stack.icon-stack-xl.bg-primary.text-white.mb-4
                        i(data-feather='globe')
                    h3 Complete coverage
                    p.mb-0
                        | We get documents from multiple sources, ensuring your knowledge is complete. With extensive search tools and open source filters you'll find exactly what you need
    hr

    include mixins/section.pug

    //- Shutdown notice script (Option A: always show, no persistence)
    script.
        (function () {
          const overlay = document.getElementById('sdn-overlay');
          if (!overlay) return;

          const btnCloseX = overlay.querySelector('.sdn-close');
          const btnOk     = document.getElementById('sdn-ok');

          const focusableSel = [
            'a[href]','button:not([disabled])','textarea','input[type="text"]',
            'input[type="email"]','input[type="search"]','input[type="tel"]',
            'input[type="url"]','select','[tabindex]:not([tabindex="-1"])'
          ].join(',');

          function open() {
            overlay.hidden = false;
            document.body.classList.add('sdn-open');
            const first = overlay.querySelector(focusableSel);
            if (first) first.focus();
            document.addEventListener('keydown', onKeyDown);
            overlay.addEventListener('click', onBackdrop);
            trapStart();
          }

          function close() {
            overlay.hidden = true;
            document.body.classList.remove('sdn-open');
            document.removeEventListener('keydown', onKeyDown);
            overlay.removeEventListener('click', onBackdrop);
            trapStop();
          }

          function onKeyDown(e) {
            if (e.key === 'Escape') close(); // Esc to close
            if (e.key === 'Tab') trapTab(e); // keep focus inside
          }

          function onBackdrop(e) {
            if (e.target === overlay) close(); // click outside modal content
          }

          // Focus trap
          let focusables = [];
          function trapStart() {
            focusables = Array.from(overlay.querySelectorAll(focusableSel));
          }
          function trapStop() { focusables = []; }
          function trapTab(e) {
            if (!focusables.length) return;
            const first = focusables[0];
            const last = focusables[focusables.length - 1];
            const active = document.activeElement;
            if (e.shiftKey && active === first) { last.focus(); e.preventDefault(); }
            else if (!e.shiftKey && active === last) { first.focus(); e.preventDefault(); }
          }

          // Wire buttons
          btnCloseX?.addEventListener('click', close);
          btnOk?.addEventListener('click', close);

          // Public hook to reopen from console if needed
          window.openShutdownNotice = open;

          // Always show on load
          open();
        })();

extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Team'

block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *

    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-primary',
        navbarStyle: 'navbar-dark',
        navbarBrandColor: 'text-white',
        navbarBtnColor: 'btn-white',
        navbarContainer: 'container',
        navbarPosition: 'fixed-top'
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-primary',
        pageHeaderStyle: 'page-header-dark',
        svgBorderAngled: true,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .page-header-content.pt-10
            .container.text-center
                .row.justify-content-center
                    .col-lg-8
                        h1.page-header-title.mb-3 Meet the team
                        //- p.page-header-text We are a group of researchers and developers

    //- * * * * * * * * * * *
    //- * * Text Section  * *
    //- * * * * * * * * * * *

    include mixins/section.pug
    +section({
        sectionBg: 'bg-white',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: true,
        svgBorderWaves: false,
        svgBorderFill: 'text-dark'
    })

        .container
            .row
                .col-md-6.col-xl-4.mb-5
                    
                .col-md-6.col-xl-4.mb-5
                    .card.card-team
                        .card-body
                            img.card-team-img.mb-3(src='assets/img/illustrations/profiles/marc-profile.jpg', alt='...')
                            .card-team-name Marc Plunkett
                            .card-team-position.mb-3 Founder
                            p.small.mb-0 PhD in chemical engineering and serial entrepeneur. Created scrutiny during PhD and previous leader of an international social enterprise providing consulting services to SME's, charities and startups
                        .card-footer.text-center
                            a.btn.btn-icon.btn-transparent-dark.mx-1(href='https://twitter.com/plunkett_marc')
                                i.fab.fa-twitter
                            a.btn.btn-icon.btn-transparent-dark.mx-1(href='https://www.linkedin.com/in/marc-plunkett/')
                                i.fab.fa-linkedin-in
                .col-md-6.col-xl-4.mb-5
                    
                

block footer

    include mixins/footer.pug
    +footer({
        footerBg: 'bg-dark',
        footerStyle: 'footer-dark'
    })